    body {
    height: 100%;
    padding: 0;
    margin: 0;
    color:rgb(230, 170, 20);
}
    

.left {
    height: 100vh;
    width: 70%;
    background:rgba(150, 255, 255, 0.3);
    box-sizing:border-box;
    float: left;
}

.right {
    height: 100vh;
    width: 30%;
    background:rgba(210, 226, 194, 0.251);
    box-sizing:border-box;
    float: right;
}
    #message-container {
      position:absolute;
      top: 55px;
      right:0;
      z-index:1;
      width:30%;
      height:calc(100% - 45px);
      overflow-y:scroll;
      padding:1px;
      box-sizing:border-box;
    }

    #message-container div {
      position:relative;
      margin:0 0 20px 0;
      clear:both;
      height:35px;
    }

    #message-container div:nth-child(2n) {
      display:inline-block;
      margin:5px 0;
    }
    #message-container>div>div{
      display:inline-block;
    }
    #show .content{
      background:rgba(255,255,255,.8);
      padding:10px;
      margin-top:15px;
      margin-left:10px;
      border-radius:5px;
      vertical-align:middle;
    }
    #send-container {
      position:absolute;
      z-index:2;
      height:45px;
      width:30%;
      right:0;
      bottom:0;
      margin:0;
      padding:5px;
      box-sizing:border-box;
      background:rgba(110, 80, 80, 0.8);
      color:rgb(122, 140, 70);
        }
    #input div{
      width:80%;
      float:left;
    }
    #message-input {
      width:78%;
      border:none;
      padding:5px;
    }
    #send-button{
      float:right;
      height:95%;
      width:21%;
      margin:2px 0;
      border:none;
      padding:0;
      background:#369;
      font-size:16px;
      color:#fff;
    }

    #video-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, 275px);
      grid-auto-rows: 275px;
    }
    
    video {
      width: 100%;
      height: 100%;
      object-fit: cover;
      
    }
    header {
      position: relative;
      z-index:3;
    }
  </style>
